{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "metadata-registry-api",
        "creationTimestamp": null,
        "annotations": {
            "description": "Metadata Registry application Angular.JS/Wildfly/MongoDB database",
            "tags": "quickstart,nodejs,mongodb",
            "iconClass": "icon-nodejs"
        }
    },
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${METADATA_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "ports": [{
                "name": "metadata-ui",
                "port": 8080,
                "targetPort": 8080
            }, {
                "name": "metadata-rest",
                "port": 18080,
                "targetPort": 18080
            }, {
                "name": "metadata-mongodb",
                "port": 27017,
                "targetPort": 27017
            }],
            "selector": {
                "name": "${METADATA_SERVICE_NAME}"
            },
            "portalIP": "",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${METADATA_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate"
            },
            "replicas": 1,
            "selector": {
                "name": "${METADATA_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${METADATA_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                            "name": "metadata-web-ui",
                            "image": "docker.io/metadatapoc/metadata-registry-web-ui",
                            "ports": [{
                                "containerPort": 8080
                            }]
                        }
                        , {
                            "name": "metadata-rest-api",
                            "image": "docker.io/metadatapoc/metadata-registry-rest",
                            "env": [{
                                "name": "MONGODB_USER",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_PASSWORD",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_DATABASE",
                                "value": "metaregistry"
                            }],
                            "ports": [{
                                "containerPort": 18080
                            }, {
                                "containerPort": 9990
                            }]
                        }, {
                            "name": "metadata-database",
                            "image": "docker.io/centos/mongodb-32-centos7",
                            "env": [{
                                "name": "MONGODB_USER",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_PASSWORD",
                                "value": "admin"
                            }, {
                                "name": "MONGODB_DATABASE",
                                "value": "metaregistry"
                            }, {
                                "name": "MONGODB_ADMIN_PASSWORD",
                                "value": "admin"
                            }],
                            "ports": [{
                                "containerPort": 27017
                            }]
                        }


                    ]
                }
            }
        }
    }],
    "parameters": [{
        "name": "METADATA_SERVICE_NAME",
        "displayName": "Metadata Service Name",
        "required": true,
        "value": "metadataregistry"
    }, {
        "name": "DATABASE_USER",
        "displayName": "MongoDB Username",
        "description": "Username for MongoDB user that will be used for accessing the database.",
        "generate": "expression",
        "from": "user[A-Z0-9]{3}"
    }, {
        "name": "DATABASE_PASSWORD",
        "displayName": "MongoDB Password",
        "description": "Password for the MongoDB user.",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{16}"
    }, {
        "name": "DATABASE_NAME",
        "displayName": "Database Name",
        "value": "metaregistry"
    }, {
        "name": "DATABASE_ADMIN_PASSWORD",
        "displayName": "Database Administrator Password",
        "description": "Password for the database admin user.",
        "generate": "expression",
        "from": "[a-zA-Z0-9]{16}"
    }, {
        "name": "SOURCE_REPOSITORY_URL",
        "description": "The URL of the repository with your application source code",
        "value": "https://github.com/zmhassan/metadata-registry-rest.git"
    }, {
        "name": "MEMORY_LIMIT",
        "displayName": "Memory Limit",
        "description": "Maximum amount of memory the container can use.",
        "value": "512Mi"
    }, {
        "name": "MEMORY_MONGODB_LIMIT",
        "displayName": "Memory Limit",
        "description": "Maximum amount of memory the container can use.",
        "value": "512Mi"
    }, {
        "name": "NAMESPACE",
        "displayName": "Namespace",
        "description": "The OpenShift Namespace where the ImageStream resides.",
        "value": "openshift"
    }],
    "message": "You can connect to the database using MongoDB connection URL mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${DATABASE_SERVICE_NAME}/${MONGODB_DATABASE}"
}
